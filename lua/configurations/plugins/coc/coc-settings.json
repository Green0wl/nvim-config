{
  "languageserver": {
    "lua": {
      "command": "~/.local/share/nvim/mason/bin/lua-language-server",
      "filetypes": ["lua"],
      "rootPatterns": [".git/"],
      "settings": {
        "Lua": {
          "workspace": {
            "maxPreload": 2000,
            "preloadFileSize": 1000
          },
          "diagnostics": {
            "enable": true,
            "globals": [
              "hs",
              "vim",
              "it",
              "describe",
              "before_each",
              "after_each"
            ],
            "disable": ["lowercase-global"]
          },
          "completion": {
            "keywordSnippet": "Disable"
          }
        }
      }
    },
    "csharp-ls": {
      "command": "csharp-ls",
      "filetypes": ["cs"],
      "rootPatterns": ["*.csproj", ".vim/", ".git/", ".hg/"]
    },
    "angular": {
      "command": "ngserver",
      "args": [
        "--stdio",
        "--tsProbeLocations",
        "/usr/local/lib/node_modules/typescript/lib",
        "--ngProbeLocations",
        "/usr/local/lib/node_modules/@angular/language-service"
      ],
      "filetypes": [
        "ts",
        "typescript",
        "html",
        "typescriptreact",
        "typescript.tsx"
      ],
      "trace.server.verbosity": "verbose"
    }
  },

  "Lua.diagnostics.globals": ["vim"],

  "pyright.enable": true,
  "python.analysis.autoImportCompletions": true,
  "python.analysis.autoSearchPaths": true,
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.diagnosticSeverityOverrides": {
    "reportPrivateImportUsage": "none"
  },

  "rome.enable": true,
  "rome.bin": "/usr/local/bin/rome",

  "eslint.packageManager": "yarn",
  "eslint.nodePath": ".yarn/sdks",
  "workspace.workspaceFolderCheckCwd": false,
  "tsserver.tsdk": "/usr/local/lib/node_modules/typescript/lib",

  "coc.preferences.formatOnSave": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "scss",
    "markdown",
    "typescript",
    "javascript",
    "json"
  ]
}
